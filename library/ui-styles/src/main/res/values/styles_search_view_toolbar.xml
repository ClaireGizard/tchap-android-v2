<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Tchap.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
        <item name="closeIcon">@drawable/ic_tchap_clear_search</item>
        <item name="searchHintIcon">@drawable/ic_tchap_search_input</item>
        <item name="searchIcon">@drawable/ic_tchap_search_input</item>
        <item name="iconifiedByDefault">false</item>
    </style>

    <style name="Widget.Tchap.SearchView.Toolbar">
        <item name="android:background">@drawable/bg_tchap_bar_search_field</item>
        <item name="android:theme">@style/AppTheme.Toolbar.SearchView</item>
    </style>

    <style name="AppTheme.Toolbar.SearchView" parent="Theme.Vector.Light">
        <item name="android:colorControlActivated">?colorOnPrimary</item>
        <item name="android:textColorPrimary">?colorOnPrimary</item>
        <item name="android:textColorHint">@color/tchap_toolbar_search_hint</item>
        <item name="android:tint">@color/tchap_toolbar_search_hint</item>
    </style>

</resources>